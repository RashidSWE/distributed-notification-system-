# RabbitMQ
RABBITMQ_USER=guest
RABBITMQ_PASS=guest
RABBITMQ_HOST=rabbitmq
RABBITMQ_PORT=5672
RABBITMQ_MANAGEMENT_PORT=15672
RABBITMQ_EXCHANGE=notifications.direct
RABBITMQ_PUSH_QUEUE=push.queue
RABBITMQ_FAILED_QUEUE=failed.queue
RABBITMQ_PREFETCH_COUNT=10

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# PostgreSQL
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=push_service
POSTGRES_SSLMODE=disable

# API Gateway
API_HOST=0.0.0.0
API_PORT=8000

# Push Service
PUSH_SERVICE_HOST=0.0.0.0
PUSH_SERVICE_PORT=8001

# Firebase Cloud Messaging (FCM)
FCM_PROJECT_ID=your-firebase-project-id
FCM_CREDENTIALS_PATH=/path/to/firebase-credentials.json
FCM_TIMEOUT=10

# Circuit Breaker
CIRCUIT_MAX_REQUESTS=3
CIRCUIT_INTERVAL=60
CIRCUIT_TIMEOUT=30
CIRCUIT_FAILURE_THRESHOLD=5

# Retry Configuration
RETRY_MAX_ATTEMPTS=3
RETRY_INITIAL_INTERVAL=1
RETRY_MAX_INTERVAL=60
RETRY_MULTIPLIER=2.0
